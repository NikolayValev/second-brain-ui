{
  "name": "second-brain-ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npm run generate:api-types && prisma generate && next build",
    "start": "next start",
    "lint": "eslint",
    "test": "jest",
    "test:unit": "jest --testPathPatterns=__tests__/components --testPathPatterns=__tests__/lib",
    "test:impl": "jest --testPathPatterns=__tests__/api",
    "test:live": "jest --testPathPatterns=__tests__/integration/live-backend.test.ts",
    "test:e2e": "playwright test",
    "test:e2e:deployed": "node scripts/run-e2e-deployed.mjs",
    "test:e2e:tunnel": "node scripts/run-e2e-tunnel.mjs",
    "test:all": "npm run test:unit && npm run test:impl && npm run test:e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prisma:generate": "prisma generate",
    "generate:api-types": "dotenv -- bash -c 'openapi-typescript $PYTHON_API_URL/openapi.json -o lib/api-types.ts'"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.37.3",
    "@prisma/client": "^5.22.0",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@vercel/analytics": "^1.6.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "next-themes": "^0.4.6",
    "openapi-fetch": "^0.15.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "localtunnel": "^2.0.2",
    "openapi-typescript": "^7.10.1",
    "prisma": "^5.22.0",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.6",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  }
}
